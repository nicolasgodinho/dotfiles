# COMMANDS
command term urxvt
command lock xtrlock
command lockblackscreen "xtrlock -b"
command locksuspend "sh -c 'xtrlock -b & sudo pm-suspend'"

command top "urxvt -e top"
command htop "urxvt -e htop"
command irssi "urxvt -e irssi"
command tmux "urxvt -e tmux"

command firefox firefox
command chromium "chromium --incognito"
command vim gvim
command spotify spotify
command mail claws-mail

# AUTOGROUPS
autogroup 1 "Firefox"
autogroup 1 "Chromium"
autogroup 9 "claws-mail"
autogroup 0 "dzen"
autogroup 0 "Spotify"
autogroup 0 "Xystray"

# APPEARANCE & BEHAVIOUR
fontname "sans-serif:pixelsize=14:bold"
borderwidth 2
sticky yes
snapdist 30
gap 14 0 0 0
moveamount 20

# IGNORE SOME WINDOWS
ignore dzen
ignore stalonetray
ignore xystray
ignore VLC
ignore Dunst

# GROUPS
bind 4-1        grouponly1
bind C4-1       group1
bind S4-1       movetogroup1
