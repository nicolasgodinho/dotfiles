# General settings
alignment top_left
update_interval 2
gap_x 10
gap_y 20
maximum_width 200
minimum_size 200 10

# Should conky be launch as daemonized?
background no

# Appearance
border_width 0
cpu_avg_samples 5
default_outline_color FF0000
default_shade_color 00FF00
draw_borders no
draw_graph_borders no
draw_outline no
draw_shades no
stippled_borders 5
# Pad on left to align text on the right
use_spacer left
# Fonts stuff
use_xft yes
xftfont Sans:size=7.5
xftalpha 0.9
# create a separate XWindow over the one from Xfdesktop
own_window yes
own_window_class Conky
# the window cannot be moved or resized
own_window_type desktop
# make it behave like it belongs to the desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
# true transparency, a compositor has to be active
own_window_argb_visual yes
# make the background semi-transparent
own_window_argb_value 128
own_window_transparent yes
# avoid flickering
double_buffer yes

# Misc
max_port_monitor_connections 64
max_specials 512
max_user_text 16384
net_avg_samples 1
out_to_console no
short_units yes

# My colors
default_color EEEEEE
color1  D0D0D0
color2  666666
color3  AAAAAA
color4  333333
color5  DD6666

